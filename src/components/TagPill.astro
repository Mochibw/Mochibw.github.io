---
interface Props {
  tag: string;
  href?: string;
}

const { tag, href } = Astro.props;
const tagHref = href || `/tags/${tag}/`;
---

<a
  href={tagHref}
  class="inline-block px-3 py-1 text-sm bg-[#66ccff] text-white rounded-full hover:bg-[#5ab8e6] transition-all duration-200 transform hover:scale-105"
>
  {tag}
</a>