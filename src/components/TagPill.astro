---
interface Props {
  tag: string;
  href?: string;
}

const { tag, href } = Astro.props;
const tagHref = href || `/tags/${tag}/`;
---

<a
  href={tagHref}
  class="inline-block px-3 py-1 text-sm bg-teal-500 text-white rounded-full hover:bg-teal-600 transition-all duration-200 transform hover:scale-105"
>
  {tag}
</a>